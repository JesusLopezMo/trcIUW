<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lecturaIUW.LecturaFragment">


    <ImageView
        android:id="@+id/iuwm"
        android:layout_width="275dp"
        android:layout_height="274dp"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/iuwm" />

    <pl.droidsonroids.gif.GifImageView

        android:id="@+id/alertGif"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"

        android:src="@mipmap/alert"
        app:layout_constraintStart_toEndOf="@+id/iuwm"
        app:layout_constraintTop_toBottomOf="@+id/lecturaVol"
        tools:ignore="MissingConstraints" />

    <pl.droidsonroids.gif.GifImageView

        android:id="@+id/noteGif"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"

        android:visibility="invisible"
        android:src="@mipmap/notes"
        app:layout_constraintBottom_toTopOf="@+id/lecturaVol"
        app:layout_constraintStart_toEndOf="@+id/iuwm"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/linkTriveca"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/link" />

    <TextView
        android:id="@+id/lblMacroDeAU"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:singleLine="false"
        android:text="MACROMEDIDOR DE AGUA POR\n ULTRASONIDO"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lecturaSerie"
        app:layout_constraintStart_toStartOf="@+id/lecturaSerie"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lecturaSerie"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginBottom="20dp"
        android:singleLine="false"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/iuwm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lecturaVol"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="284dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblFecha"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginBottom="4dp"
        android:singleLine="false"
        android:text="Fecha Lectura"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fechaActual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fechaActual"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginBottom="40dp"
        android:singleLine="false"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linkTriveca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/informacionNfc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>